{
  "compilerOptions": {
    "target": "es2020",  // Use a newer target
    "module": "CommonJS",
    "moduleResolution": "node",  // Node.js module resolution
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,  // If you need type declarations
    "sourceMap": true,    // If you need source maps
    "rootDir": "./src",   // Set source directory
    "outDir": "./dist",   // Set output directory
    "allowJs": true,      // Allow JavaScript files in the project
    "resolveJsonModule": true  // If you need to import JSON files
  }
}
